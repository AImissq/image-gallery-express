extends layout
 
block content
  h1 Upload An Image
  form(method='post', enctype='multipart/form-data')
    p
      | Image to Upload: 
      br
      input(type='file', name='upload')
      br
      | Description (Optional): 
      br
      input(type='text', name='description')
    input(type='submit', name='submit', value='Upload Image')
